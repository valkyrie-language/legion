{
    "$schema": "https://spec.openapis.org/oas/3.0/schema/2021-09-28#/definitions/Schema",
    "title": "LegionConfig",
    "components": {
        "schemas": {
            "DependencySystem": {
                "type": "object",
                "properties": {
                    "build-dependencies": {
                        "type": "array",
                        "default": [],
                        "items": {
                            "$ref": "#/components/schemas/LegionDependency"
                        }
                    },
                    "dependencies": {
                        "type": "array",
                        "default": [],
                        "items": {
                            "$ref": "#/components/schemas/LegionDependency"
                        }
                    },
                    "tests-dependencies": {
                        "type": "array",
                        "default": [],
                        "items": {
                            "$ref": "#/components/schemas/LegionDependency"
                        }
                    }
                }
            },
            "LegionAuthors": {
                "anyOf": [
                    {
                        "type": "string"
                    },
                    {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                ]
            },
            "LegionDependency": {
                "type": "object",
                "properties": {
                    "branch": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "nullable": true
                    },
                    "git": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "nullable": true
                    },
                    "hash": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "nullable": true
                    },
                    "version": {
                        "$ref": "#/components/schemas/SemVer"
                    }
                },
                "required": [
                    "version"
                ]
            },
            "LegionPackage": {
                "type": "object",
                "properties": {
                    "description": {
                        "description": "The description of the package",
                        "type": [
                            "string",
                            "null"
                        ],
                        "nullable": true
                    },
                    "authors": {
                        "description": "The author of the package",
                        "$ref": "#/components/schemas/LegionAuthors",
                        "default": null
                    },
                    "build-dependencies": {
                        "type": "array",
                        "default": [],
                        "items": {
                            "$ref": "#/components/schemas/LegionDependency"
                        }
                    },
                    "dependencies": {
                        "type": "array",
                        "default": [],
                        "items": {
                            "$ref": "#/components/schemas/LegionDependency"
                        }
                    },
                    "documentation": {
                        "type": "string",
                        "default": ""
                    },
                    "homepage": {
                        "type": "string",
                        "default": ""
                    },
                    "keywords": {
                        "description": "The keywords of the package",
                        "type": [
                            "array",
                            "null"
                        ],
                        "items": {
                            "type": "string"
                        },
                        "nullable": true
                    },
                    "license": {
                        "type": "string",
                        "default": ""
                    },
                    "name": {
                        "description": "The name of the package",
                        "type": "string"
                    },
                    "peers": {
                        "$ref": "#/components/schemas/DependencySystem",
                        "default": {
                            "build-dependencies": [],
                            "dependencies": [],
                            "tests-dependencies": []
                        }
                    },
                    "private": {
                        "type": [
                            "boolean",
                            "null"
                        ],
                        "default": null,
                        "nullable": true
                    },
                    "readme": {
                        "type": "string",
                        "default": ""
                    },
                    "repository": {
                        "type": "string",
                        "default": ""
                    },
                    "scripts": {
                        "type": "array",
                        "default": [],
                        "items": {
                            "type": "string"
                        }
                    },
                    "tests-dependencies": {
                        "type": "array",
                        "default": [],
                        "items": {
                            "$ref": "#/components/schemas/LegionDependency"
                        }
                    },
                    "version": {
                        "description": "The version of the package",
                        "anyOf": [
                            {
                                "$ref": "#/components/schemas/SemVer"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "default": null,
                        "nullable": true
                    }
                },
                "required": [
                    "name"
                ]
            },
            "LegionWorkspace": {
                "type": "object",
                "properties": {
                    "authors": {
                        "$ref": "#/components/schemas/LegionAuthors",
                        "default": null
                    },
                    "build-dependencies": {
                        "type": "array",
                        "default": [],
                        "items": {
                            "$ref": "#/components/schemas/LegionDependency"
                        }
                    },
                    "dependencies": {
                        "type": "array",
                        "default": [],
                        "items": {
                            "$ref": "#/components/schemas/LegionDependency"
                        }
                    },
                    "exclude": {
                        "description": "Exclude module in `exclude` paths",
                        "type": "array",
                        "default": [],
                        "items": {
                            "type": "string"
                        }
                    },
                    "include": {
                        "description": "Add module in `include` paths",
                        "type": "array",
                        "default": [],
                        "items": {
                            "type": "string"
                        }
                    },
                    "members": {
                        "description": "Search `legion.toml` under `members` path",
                        "type": "array",
                        "default": [],
                        "items": {
                            "type": "string"
                        }
                    },
                    "peers": {
                        "$ref": "#/components/schemas/DependencySystem",
                        "default": {
                            "build-dependencies": [],
                            "dependencies": [],
                            "tests-dependencies": []
                        }
                    },
                    "private": {
                        "type": [
                            "boolean",
                            "null"
                        ],
                        "default": null,
                        "nullable": true
                    },
                    "tests-dependencies": {
                        "type": "array",
                        "default": [],
                        "items": {
                            "$ref": "#/components/schemas/LegionDependency"
                        }
                    },
                    "version": {
                        "anyOf": [
                            {
                                "$ref": "#/components/schemas/SemVer"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "default": null,
                        "nullable": true
                    }
                }
            },
            "SemVer": {
                "type": "string",
                "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
            }
        }
    },
    "oneOf": [
        {
            "description": "The workspace with multiple modules",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "workspace"
                    ]
                }
            },
            "allOf": [
                {
                    "$ref": "#/components/schemas/LegionWorkspace"
                }
            ],
            "required": [
                "type"
            ]
        },
        {
            "description": "The package in workspace",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "module"
                    ]
                }
            },
            "allOf": [
                {
                    "$ref": "#/components/schemas/LegionPackage"
                }
            ],
            "required": [
                "type"
            ]
        },
        {
            "description": "The package standalone",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "package"
                    ]
                }
            },
            "allOf": [
                {
                    "$ref": "#/components/schemas/LegionPackage"
                }
            ],
            "required": [
                "type"
            ]
        }
    ]
}