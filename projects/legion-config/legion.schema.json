{
    "$schema": "https://spec.openapis.org/oas/3.0/schema/2021-09-28#/definitions/Schema",
    "title": "LegionConfig",
    "components": {
        "schemas": {
            "LegionAuthors": {
                "anyOf": [
                    {
                        "type": "string"
                    },
                    {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                ]
            },
            "LegionPackage": {
                "type": "object",
                "properties": {
                    "description": {
                        "description": "The description of the package",
                        "type": [
                            "string",
                            "null"
                        ],
                        "nullable": true
                    },
                    "authors": {
                        "description": "The author of the package",
                        "$ref": "#/components/schemas/LegionAuthors",
                        "default": null
                    },
                    "build-dependencies": {
                        "type": "array",
                        "default": [],
                        "items": {
                            "type": "string"
                        }
                    },
                    "dependencies": {
                        "type": "array",
                        "default": [],
                        "items": {
                            "type": "string"
                        }
                    },
                    "dev-dependencies": {
                        "type": "array",
                        "default": [],
                        "items": {
                            "type": "string"
                        }
                    },
                    "documentation": {
                        "type": "string",
                        "default": ""
                    },
                    "homepage": {
                        "type": "string",
                        "default": ""
                    },
                    "keywords": {
                        "description": "The keywords of the package",
                        "type": [
                            "array",
                            "null"
                        ],
                        "items": {
                            "type": "string"
                        },
                        "nullable": true
                    },
                    "license": {
                        "type": "string",
                        "default": ""
                    },
                    "name": {
                        "description": "The name of the package",
                        "type": "string"
                    },
                    "peer-dependencies": {
                        "type": "array",
                        "default": [],
                        "items": {
                            "type": "string"
                        }
                    },
                    "private": {
                        "type": [
                            "boolean",
                            "null"
                        ],
                        "default": null,
                        "nullable": true
                    },
                    "readme": {
                        "type": "string",
                        "default": ""
                    },
                    "repository": {
                        "type": "string",
                        "default": ""
                    },
                    "scripts": {
                        "type": "array",
                        "default": [],
                        "items": {
                            "type": "string"
                        }
                    },
                    "version": {
                        "description": "The version of the package",
                        "$ref": "#/components/schemas/LegionVersion",
                        "default": null
                    }
                },
                "required": [
                    "name"
                ]
            },
            "LegionVersion": {
                "oneOf": [
                    {
                        "type": "string",
                        "default": "0.0.0",
                        "pattern": "^(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)$"
                    }
                ]
            },
            "LegionWorkspace": {
                "type": "object",
                "properties": {
                    "authors": {
                        "$ref": "#/components/schemas/LegionAuthors",
                        "default": null
                    },
                    "exclude": {
                        "description": "Exclude module in `exclude` paths",
                        "type": "array",
                        "default": [],
                        "items": {
                            "type": "string"
                        }
                    },
                    "include": {
                        "description": "Add module in `include` paths",
                        "type": "array",
                        "default": [],
                        "items": {
                            "type": "string"
                        }
                    },
                    "members": {
                        "description": "Search `legion.toml` under `members` path",
                        "type": "array",
                        "default": [],
                        "items": {
                            "type": "string"
                        }
                    },
                    "private": {
                        "type": [
                            "boolean",
                            "null"
                        ],
                        "default": null,
                        "nullable": true
                    },
                    "version": {
                        "$ref": "#/components/schemas/LegionVersion",
                        "default": null
                    }
                }
            }
        }
    },
    "oneOf": [
        {
            "description": "The workspace with multiple modules",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "workspace"
                    ]
                }
            },
            "allOf": [
                {
                    "$ref": "#/components/schemas/LegionWorkspace"
                }
            ],
            "required": [
                "type"
            ]
        },
        {
            "description": "The package in workspace",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "module"
                    ]
                }
            },
            "allOf": [
                {
                    "$ref": "#/components/schemas/LegionPackage"
                }
            ],
            "required": [
                "type"
            ]
        },
        {
            "description": "The package standalone",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "package"
                    ]
                }
            },
            "allOf": [
                {
                    "$ref": "#/components/schemas/LegionPackage"
                }
            ],
            "required": [
                "type"
            ]
        }
    ]
}