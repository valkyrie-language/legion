{
    "$schema": "https://spec.openapis.org/oas/3.0/schema/2021-09-28#/definitions/Schema",
    "title": "LegionConfig",
    "components": {
        "schemas": {
            "LegionAuthors": {
                "anyOf": [
                    {
                        "type": "null"
                    },
                    {
                        "type": "string"
                    },
                    {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                ]
            },
            "LegionPackage": {
                "type": "object",
                "properties": {
                    "description": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "nullable": true
                    },
                    "authors": {
                        "$ref": "#/components/schemas/LegionAuthors",
                        "default": null
                    },
                    "name": {
                        "type": "string"
                    },
                    "version": {
                        "$ref": "#/components/schemas/LegionVersion",
                        "default": null
                    }
                },
                "required": [
                    "name"
                ]
            },
            "LegionVersion": {
                "oneOf": [
                    {
                        "type": "string",
                        "default": "0.0.0",
                        "pattern": "^(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)$"
                    }
                ]
            },
            "LegionWorkspace": {
                "type": "object",
                "properties": {
                    "authors": {
                        "$ref": "#/components/schemas/LegionAuthors",
                        "default": null
                    },
                    "version": {
                        "$ref": "#/components/schemas/LegionVersion"

                    }
                }
            }
        }
    },
    "oneOf": [
        {
            "description": "The workspace with multiple modules",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "workspace"
                    ]
                }
            },
            "allOf": [
                {
                    "$ref": "#/components/schemas/LegionWorkspace"
                }
            ],
            "required": [
                "type"
            ]
        },
        {
            "description": "The package in workspace",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "module"
                    ]
                }
            },
            "allOf": [
                {
                    "$ref": "#/components/schemas/LegionPackage"
                }
            ],
            "required": [
                "type"
            ]
        },
        {
            "description": "The package standalone",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "package"
                    ]
                }
            },
            "allOf": [
                {
                    "$ref": "#/components/schemas/LegionPackage"
                }
            ],
            "required": [
                "type"
            ]
        }
    ]
}